<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns2="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BottomButtonTheme.Dark" parent="Theme.MyApplication">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/bottom_btn_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:insetTop">@dimen/bottom_button_insets</item>
        <item name="android:insetBottom">@dimen/bottom_button_insets</item>
        <item name="backgroundTint">@color/bottom_btn_bgrnd_tint</item>
    </style>

    <style name="BottomButtonTheme.Light" parent="Theme.MyApplication">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:insetTop">@dimen/bottom_button_insets</item>
        <item name="android:insetBottom">@dimen/bottom_button_insets</item>
        <item name="backgroundTint">@color/transparent_background</item>
        <item name="strokeColor">@color/model_parameter_ti_layout_box_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:stateListAnimator" ns2:ignore="NewApi">@animator/mtrl_btn_unelevated_state_list_anim</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MyApplication">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ModelParameterTitleTheme" parent="Theme.MyApplication">
        <item name="android:textColor">@color/model_parameter_title</item>
        <item name="android:textSize">@dimen/model_parameter_title_text_size</item>
    </style>
    <style name="Product_card_text" parent="Theme.MyApplication">
        <item name="android:textColor">@color/text_product</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>
</resources>