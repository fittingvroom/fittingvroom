<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BottomButtonTheme" parent="Theme.MyApplication">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/bottom_btn_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:insetTop">@dimen/bottom_button_insets</item>
        <item name="android:insetBottom">@dimen/bottom_button_insets</item>
        <item name="backgroundTint">@color/bottom_btn_bgrnd_tint</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MyApplication">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>